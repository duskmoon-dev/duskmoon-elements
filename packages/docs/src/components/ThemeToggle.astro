---
// ThemeToggle - switches between moonlight (dark) and sunshine (light) themes
---

<button
  class="theme-toggle"
  type="button"
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <span class="icon sun-icon" aria-hidden="true">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="5"/>
      <line x1="12" y1="1" x2="12" y2="3"/>
      <line x1="12" y1="21" x2="12" y2="23"/>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
      <line x1="1" y1="12" x2="3" y2="12"/>
      <line x1="21" y1="12" x2="23" y2="12"/>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
    </svg>
  </span>
  <span class="icon moon-icon" aria-hidden="true">
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
    </svg>
  </span>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    border: none;
    border-radius: 8px;
    background-color: transparent;
    color: var(--color-on-surface);
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .theme-toggle:hover {
    background-color: var(--color-surface-container, rgba(0, 0, 0, 0.1));
  }

  .icon {
    display: none;
  }

  /* Show sun icon in dark mode (to switch to light) */
  :global([data-theme='moonlight']) .sun-icon {
    display: block;
  }

  /* Show moon icon in light mode (to switch to dark) */
  :global([data-theme='sunshine']) .moon-icon {
    display: block;
  }
</style>

<script>
  // Use event delegation on body to handle theme toggle clicks
  // This ensures it works even with Astro page transitions
  document.body.addEventListener('click', (e) => {
    const button = (e.target as Element).closest('.theme-toggle');
    if (!button) return;

    const html = document.documentElement;
    const currentTheme = html.dataset.theme || 'moonlight';
    const newTheme = currentTheme === 'moonlight' ? 'sunshine' : 'moonlight';

    html.dataset.theme = newTheme;
    localStorage.setItem('duskmoon-theme', newTheme);
  });
</script>
