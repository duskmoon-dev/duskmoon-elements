---
import DocsLayout from '../../../layouts/DocsLayout.astro';
import { getCollection } from 'astro:content';

const docs = await getCollection('docs', ({ data }) => !data.draft && !!data.component);

// Group by section
const groups: Record<string, typeof docs> = {};
docs.forEach((doc) => {
  const section = doc.data.section;
  if (!groups[section]) groups[section] = [];
  groups[section].push(doc);
});

// Sort within each group by order
for (const section of Object.keys(groups)) {
  groups[section].sort((a, b) => (a.data.order ?? 999) - (b.data.order ?? 999));
}

const sectionMeta: Record<string, { order: number; label: string }> = {
  input: { order: 1, label: 'Input' },
  feedback: { order: 2, label: 'Feedback' },
  navigation: { order: 3, label: 'Navigation' },
  surfaces: { order: 4, label: 'Surfaces' },
  'data-display': { order: 5, label: 'Data Display' },
};

const sortedSections = Object.keys(groups)
  .filter((s) => sectionMeta[s])
  .sort((a, b) => sectionMeta[a].order - sectionMeta[b].order);

const totalCount = docs.length;
---

<DocsLayout title="Components" description="Browse all DuskMoon Elements components by category">
  <div class="components-page">
    <header class="page-header">
      <h1>Components</h1>
      <p class="page-description">
        Browse all <strong>{totalCount}</strong> components organized by category.
        Each component is a standalone Web Component that works with any framework.
      </p>
    </header>

    {sortedSections.map((section) => (
      <section class="category-section">
        <h2 class="category-title">{sectionMeta[section].label}</h2>
        <div class="component-grid">
          {groups[section].map((doc) => (
            <a href={`/duskmoon-elements/docs/${doc.slug}`} class="component-card">
              <h3 class="card-title">{doc.data.title}</h3>
              <p class="card-description">{doc.data.description}</p>
              <span class="card-link">View docs &rarr;</span>
            </a>
          ))}
        </div>
      </section>
    ))}
  </div>
</DocsLayout>

<style>
  .components-page {
    max-width: 960px;
  }

  .page-header {
    margin-bottom: 2.5rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-description {
    color: var(--color-on-surface);
    opacity: 0.75;
    font-size: 1.05rem;
    margin: 0;
  }

  .category-section {
    margin-bottom: 2.5rem;
  }

  .category-title {
    font-size: 1.25rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-outline, #e0e0e0);
    margin-bottom: 1rem;
  }

  .component-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 1rem;
  }

  .component-card {
    display: flex;
    flex-direction: column;
    padding: 1.25rem;
    border-radius: 0.75rem;
    border: 1px solid var(--color-outline, #e0e0e0);
    background-color: var(--color-surface-container, #f5f5f5);
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s, box-shadow 0.2s, transform 0.15s;
  }

  .component-card:hover {
    border-color: var(--color-primary);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
    text-decoration: none;
  }

  .card-title {
    font-size: 1rem;
    margin: 0 0 0.35rem;
    color: var(--color-on-surface);
  }

  .card-description {
    font-size: 0.85rem;
    color: var(--color-on-surface);
    opacity: 0.7;
    margin: 0;
    flex: 1;
  }

  .card-link {
    display: inline-block;
    margin-top: 0.75rem;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .component-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
