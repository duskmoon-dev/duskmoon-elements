{
  "name": "@duskmoon-dev/custom-elements",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "elements/*",
    "packages/*",
    "playground"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --filter '*' dev",
    "test": "bun run --filter '*' test",
    "typecheck": "bun run --filter '*' typecheck",
    "clean": "bun run --filter '*' clean",
    "build:core": "bun run --filter @duskmoon-dev/el-core build",
    "build:elements": "bun run --filter '@duskmoon-dev/el-button' --filter '@duskmoon-dev/el-card' --filter '@duskmoon-dev/el-input' --filter '@duskmoon-dev/el-markdown' build",
    "build:all": "bun run build:core && bun run build:elements",
    "format": "bun run --filter '*' format",
    "format:check": "bun run --filter '*' format:check",
    "lint": "bun run --filter '*' lint",
    "lint:check": "bun run --filter '*' lint:check",
    "lint:fix": "bun run --filter '*' lint:fix",
    "release:core": "bun run --filter @duskmoon-dev/el-core release",
    "release:elements": "bun run --filter '@duskmoon-dev/el-button' --filter '@duskmoon-dev/el-card' --filter '@duskmoon-dev/el-input' --filter '@duskmoon-dev/el-markdown' release",
    "release": "bun run release:core && bun run release:elements",
    "release:core:dry-run": "bun run --filter @duskmoon-dev/el-core release:dry-run",
    "release:elements:dry-run": "bun run --filter '@duskmoon-dev/el-button' --filter '@duskmoon-dev/el-card' --filter '@duskmoon-dev/el-input' --filter '@duskmoon-dev/el-markdown' release:dry-run",
    "release:dry-run": "bun run release:core:dry-run && bun run release:elements:dry-run",
    "playground": "bun run --filter @duskmoon-dev/playground dev",
    "playground:build": "bun run --filter @duskmoon-dev/playground build",
    "playground:preview": "bun run --filter @duskmoon-dev/playground preview"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/bun": "^1.1.14",
    "del-cli": "7.0.0",
    "eslint": "9.39.2",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "8.51.0"
  }
}
